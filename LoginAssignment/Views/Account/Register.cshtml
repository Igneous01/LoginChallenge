@model RegisterViewModel
@{
    ViewData["BodyClass"] = "bg-dark";
}

<form asp-route-returnUrl="@ViewData["ReturnUrl"]" id="sign-in" method="post">
    <h1>Sign Up</h1>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" aria-describedby="loginInput"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" aria-describedby="loginInput" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" aria-describedby="loginInput" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" aria-describedby="loginInput" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" aria-describedby="loginInput" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Sign up</button> 
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
